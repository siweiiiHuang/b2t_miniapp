/**index.wxss**/
page {
    background-color: white;
}
.clearfix:after {
  content: '.';
  display: block;
  height: 0;
  overflow: hidden;
  visibility: hidden;
  clear: both;
}
.account_info {
  height: 300rpx;
  overflow: hidden;
  color: #fff;
  position: relative;
}
.account_info .info_bg {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 375rpx;
}
.account_info .header_image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin:34rpx 0 0 34rpx;
  overflow: hidden;
}
.add{
    position:absolute;
    font-size:22rpx;
    width:125rpx;
    height:46rpx;
    border-radius:23rpx;
    border:solid 2rpx #ffffff;
    top:39rpx;
    right:31rpx;
    line-height:46rpx;
    text-align:center;
}
.account_info .header_image image {
  width: 100rpx;
  height: 100rpx;
  border-radius:50%;
}
.account_info .shop_title {
    font-size: 30rpx;
    position:absolute;
    top:78rpx;
    left:169rpx;
}
.info_data{
    display:flex;
    justify-content:space-around;
}
.account_info .info_data .products,.account_info .info_data .new,.account_info .info_data .sales {
  text-align: center;
  margin-top: 75rpx;
  box-sizing: border-box;
  height: 30rpx;
}
.account_info .info_data .sales {
  border-right: 0;
}
.account_info .info_data > view > .sum {
  margin-top: -17rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 42rpx;
  margin-bottom: 12rpx;
}
.account_info .info_data > view > .writing {
  font-size: 22rpx;
}
.line{
    width: 2rpx;
	height: 30rpx;
	background-color: #ffd2d2;
	opacity: 0.8;
    margin-top:75rpx;
}
.product_info {
  margin-top: 12rpx;
  padding: 0 10rpx;
  margin-bottom: 100rpx;
}
.product_info .product_list {
  float: left;
  width: 50%;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
.product_info .product_list:nth-child(2n) {
  padding-left: 5rpx;
}
.product_info .product_list .product_image {
  width: 360rpx;
  height: 360rpx;
  background-color: #eaeaea;
  position: relative;
  overflow: hidden;
}
.product_info .product_list .product_image .product_image_title {
  color: #fff;
  font-size: 60rpx;
  margin-top: 116rpx;
  text-align: center;
}
.product_info .product_list .product_image .product_image_content {
  text-align: center;
  margin-top: 5rpx;
  font-size: 36rpx;
  color: #fff;
  letter-spacing: 5rpx;
}
.product_info .product_list .product_image image {
  position: absolute;
  top: 0;
  left: 0;
  width: 360rpx;
  height: 360rpx;
}
.product_info .product_list .product_list_title {
  font-size: 26rpx;
  color: #181818;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  height: 50rpx;
  line-height: 50rpx;
  width: 340rpx;
  padding-left: 10rpx;
}
.product_info .product_list .activities {
  padding-left: 10rpx;
}
.product_info .product_list .activities .activity {
  float: left;
  padding: 2rpx 6rpx;
  height: 32rpx;
  line-height: 32rpx;
  border: 1rpx solid #ff3535;
  font-size: 20rpx;
  color: #ff3535;
  margin-right: 10rpx;
  border-radius: 3rpx;
}
.product_info .product_list .product_data {
  margin-top: 5rpx;
  padding-left: 10rpx;
  width: 340rpx;
}
.product_info .product_list .product_data .price {
  font-size: 22rpx;
  color: #ff3535;
  font-weight: bold;
  float: left;
}
.product_info .product_list .product_data .price > view {
  display: inline;
  font-size: 30rpx;
}
.product_info .product_list .product_data .amount {
  float: right;
  color: #999;
  font-size: 22rpx;
  padding-top: 7rpx
}