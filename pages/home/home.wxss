page {
  background: #f6f6f6;
  min-height: 100vh;
  padding: 20rpx 0 40rpx;
}

.card {
  margin: 0 20rpx 20rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.04);
}

.service-card {
  padding: 0 20rpx 10rpx;
}

.service-grid {
  display: flex;
  justify-content: space-between;
  gap: 18rpx;
}

.service-item {
  flex: 1;
  background: transparent;
  padding: 0;
  text-align: center;
  box-shadow: none;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.service-item + .service-item {
  margin-left: 0;
}

.service-icon {
  width: 32vw;
  height: 32vw;
  max-width: 180rpx;
  max-height: 180rpx;
  margin: 0 auto 12rpx;
}

.quick-card {
  padding: 0 20rpx 10rpx;
}

.quick-grid {
  display: flex;
  justify-content: space-between;
  gap: 18rpx;
}

.quick-item {
  width: 32%;
  background: transparent;
  padding: 0;
  text-align: center;
  box-shadow: none;
}

.quick-icon {
  width: 32vw;
  height: 32vw;
  max-width: 180rpx;
  max-height: 180rpx;
  margin: 0 auto;
}

.quick-title {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #171717;
  font-weight: 600;
}

.quick-sub {
  margin-top: 4rpx;
  font-size: 20rpx;
  color: #6f6f6f;
}

.nav-card {
  margin: 0 20rpx 14rpx;
  background: #ffffff;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-around;
  padding: 18rpx 10rpx 10rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.04);
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #ff6a25;
}

.nav-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #fff3eb;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.nav-icon image {
  width: 42rpx;
  height: 42rpx;
}

.nav-text {
  font-size: 26rpx;
  color: #ff6a25;
}

.store-card {
  padding: 18rpx 20rpx;
}

.store-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111;
  margin-bottom: 12rpx;
}

.store-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 6rpx;
}

.store-info {
  flex: 1;
  padding-right: 16rpx;
}

.store-name {
  font-size: 30rpx;
  color: #111;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.store-address {
  font-size: 24rpx;
  color: #555;
  line-height: 34rpx;
}

.store-go {
  min-width: 120rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  color: #f96d30;
  border-radius: 18rpx;
  border: 2rpx solid #ffd4bd;
  background: #fff6f0;
  font-size: 26rpx;
}

.promo-card {
  padding: 14rpx 10rpx 4rpx;
}

.promo-grid {
  display: flex;
  justify-content: space-between;
}

.promo-item {
  flex: 1;
  align-items: center;
  display: flex;
  flex-direction: column;
  padding: 12rpx 0 16rpx;
}

.promo-icon {
  width: 98rpx;
  height: 98rpx;
  border-radius: 22rpx;
  background: #f7f7f7;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.promo-icon image {
  width: 62rpx;
  height: 62rpx;
}

.promo-title {
  font-size: 24rpx;
  color: #1c1c1c;
}

.search-wrap {
  margin: 6rpx 20rpx 0;
  padding: 0 6rpx 10rpx;
}

.search-box {
  height: 76rpx;
  border-radius: 16rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.04);
}

.search-icon {
  width: 34rpx;
  height: 34rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  font-size: 26rpx;
  color: #333;
}

.search-placeholder {
  color: #b8b8b8;
  font-size: 24rpx;
}

