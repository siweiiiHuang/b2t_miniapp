.shop-detail {
  width: 90%;
  height: 100%;
  background: #fff;
  display: block;
  margin:50rpx auto;
  padding: 30rpx 0 30rpx 30rpx;
  box-shadow: 0 0 10rpx 10rpx #ededed;
}

.shop-item {
  margin:20rpx 0;
}

.shop-item label{
  display: inline-block;
  color: #999;
  font-size: 14pt
}

.shop-item text,.shop-addr{
  display: inline-block;
  color: #232326;
  font-size: 12pt;
  margin-left: 10rpx;
}

.tel_block{
  display: inline-block;
  color: #232326;
  font-size: 12pt;
  margin-left: 10rpx;
}

.tel_block image{
  width: 45rpx;
  height: 45rpx
}
