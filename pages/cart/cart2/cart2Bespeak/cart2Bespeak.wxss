}

.z-Package-hrader .z-Package-icon {
    width: 0.3626rem;
    height: 0.7466rem;
    display: block;
    position: absolute;
    left: 0.64rem;
    top: 0;
}

.z-Package-icon image{
  width: 100%;
  height: 100%;
}

.ul_li .img-item {
  margin-left: 30rpx;
}

