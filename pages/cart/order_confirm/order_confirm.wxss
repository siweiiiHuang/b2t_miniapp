/* 下单确认页面样式 */
.container {
  background-color: #f9f6f0;
  min-height: 100vh;
  padding-bottom: 80px;
}

/* 配送方式选择 */
.delivery-box {
  background-color: #fff;
  padding: 15px 20px;
  margin: 10px 0;
}

.delivery-title {
  font-size: 16px;
  margin-bottom: 15px;
  color: #333;
}

.delivery-list {
  display: flex;
  flex-direction: row;
}

.delivery-item {
  flex: 1;
  padding: 12px 0;
  text-align: center;
  border: 1px solid #eee;
  border-radius: 8px;
  font-size: 15px;
  position: relative;
}

.delivery-item + .delivery-item {
  margin-left: 15px;
}

.delivery-item.active {
  border-color: #8B4513;
  background-color: #fff3e0;
  color: #8B4513;
}

.self-pick-info {
  background-color: #fff3e0;
  border-radius: 8px;
  padding: 10px 15px;
  margin-top: 10px;
}

.self-pick-item {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
}

.self-pick-label {
  color: #8B4513;
}

/* 收货地址 */
.address-box {
  background-color: #fff;
  padding: 15px 20px;
  margin: 10px 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.address-content {
  flex: 1;
}

.user-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
}

.user-name {
  font-size: 16px;
  font-weight: bold;
}

.user-phone {
  font-size: 16px;
  color: #666;
}

.address-info {
  font-size: 14px;
  color: #666;
  line-height: 1.4;
}

.no-address {
  flex: 1;
}

.add-address-text {
  font-size: 16px;
  color: #999;
}

.edit-icon {
  font-size: 14px;
  color: #8B4513;
  margin-left: 10px;
}

/* 商品信息 */
.product-list {
  background-color: #fff;
  margin: 10px 0;
}

.product-box {
  padding: 15px 20px;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
}

.product-box:last-child {
  border-bottom: none;
}

.product-img {
  width: 80px;
  height: 80px;
  border-radius: 8px;
  margin-right: 15px;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 16px;
  margin-bottom: 5px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-spec {
  font-size: 12px;
  color: #999;
  margin-bottom: 10px;
}

.product-price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.product-price {
  font-size: 18px;
  font-weight: bold;
  color: #f44336;
}

.product-num {
  font-size: 14px;
  color: #666;
}

/* 快递选择 */
.express-box {
  background-color: #fff;
  padding: 15px 20px;
  margin: 10px 0;
}

.express-title {
  font-size: 16px;
  margin-bottom: 15px;
  color: #333;
}

.express-list {
  display: flex;
  flex-direction: column;
}

.express-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
  border: 1px solid #eee;
  border-radius: 8px;
  margin-bottom: 10px;
}

.express-item:last-child {
  margin-bottom: 0;
}

.express-item.active {
  border-color: #8B4513;
  background-color: #fff3e0;
}

.express-left {
  display: flex;
  align-items: center;
}

.express-icon {
  font-size: 24px;
  color: #8B4513;
  margin-right: 10px;
}

.express-name {
  font-size: 15px;
  color: #333;
}

.express-fee {
  font-size: 14px;
  color: #f44336;
  margin-top: 3px;
}

.radio-icon {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  border: 1px solid #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.radio-icon.active {
  background-color: #8B4513;
  border-color: #8B4513;
}

.radio-icon.active::after {
  content: '';
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background-color: #fff;
}

/* 其他信息 */
.other-box {
  background-color: #fff;
  padding: 15px 20px;
  margin: 10px 0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 15px;
  color: #333;
}

.info-value {
  font-size: 14px;
  color: #666;
  display: flex;
  align-items: center;
}

.coupon-tag {
  background-color: #f44336;
  color: #fff;
  font-size: 12px;
  padding: 2px 6px;
  border-radius: 4px;
  margin-right: 5px;
}

.arrow-icon {
  font-size: 14px;
  color: #ccc;
  margin-left: 5px;
}

/* 留言框 */
.message-box {
  background-color: #fff;
  padding: 15px 20px;
  margin: 10px 0;
}

.message-title {
  font-size: 15px;
  color: #333;
  margin-bottom: 10px;
}

.message-input {
  width: 100%;
  padding: 10px;
  border: 1px solid #eee;
  border-radius: 8px;
  font-size: 14px;
  height: 80px;
  box-sizing: border-box;
}

.message-input:focus {
  border-color: #8B4513;
}

.word-count {
  text-align: right;
  font-size: 12px;
  color: #999;
  margin-top: 5px;
}

/* 金额统计 */
.amount-box {
  background-color: #fff;
  padding: 15px 20px;
  margin: 10px 0;
}

.amount-item {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  margin-bottom: 8px;
}

.amount-label {
  color: #666;
}

.amount-value {
  color: #333;
}

.amount-total {
  display: flex;
  justify-content: space-between;
  font-size: 16px;
  font-weight: bold;
  margin-top: 10px;
  padding-top: 10px;
  border-top: 1px solid #eee;
}

.total-label {
  color: #333;
}

.total-value {
  color: #f44336;
}

/* 底部提交栏 */
.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 10px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #eee;
  z-index: 99;
}

.total-price {
  font-size: 18px;
  font-weight: bold;
  color: #f44336;
}

.total-price text {
  font-size: 14px;
  color: #666;
  font-weight: normal;
}

.submit-btn {
  padding: 8px 24px;
  background-color: #f44336;
  color: #fff;
  border: none;
  border-radius: 25px;
  font-size: 14px;
  font-weight: bold;
  margin: 0;
}

.submit-btn.disabled {
  background-color: #ccc;
}

/* 提示弹窗 */
.toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0,0,0,0.7);
  color: #fff;
  padding: 10px 20px;
  border-radius: 6px;
  font-size: 14px;
  z-index: 9999;
  opacity: 0;
  transition: opacity 0.3s;
}

.toast.show {
  opacity: 1;
}