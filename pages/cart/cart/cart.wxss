/* 引入公共样式 */
@import "../../index/publics/publics.wxss";

page{
    background-color: #fff;
}
.container {
    display: flex;
    height: 100%;
    align-items: center;/*垂直居中*/
    justify-content: center;/*水平居中*/
    background-color: #fff;
    padding-bottom:250rpx;
}
.login-in{
    width: 100%;
    box-sizing: border-box;
    background-color:#f3f3f3;
}
.order-item{
    display: flex;
    justify-content: space-around;
    height: 200rpx;
    padding: 10rpx 0;
    margin-top: 20rpx;
    background-color:#ffffff;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}
.goods-ico{
    display: flex;
    align-items: center;
    width: 16rpx;
}
.goods-img{
    width: 180rpx;
    height: 180rpx;
    font-size: 0;
    margin-top: 10rpx;
}
.goods-cont{
    position: relative;
    width: 430rpx;
    height: 200rpx;
    font-size: 28rpx;
}
.goods-name{
    width: 310rpx;
    height: 64rpx;
    margin: 12rpx 0;
    line-height: 32rpx;
    color: #333;
    margin-bottom: 0;
}
.goods-attribute{
    height: 52rpx;
    line-height: 26rpx;
    font-size: 24rpx;
    color:#999;
    margin-top: 15rpx;
    width: 310rpx;
}
.goods-price{
    height: 40rpx;
    line-height: 40rpx;
    margin-top: 10rpx;
    font-size: 30rpx;
    font-weight: bold;
}
.btn-del{
    position: absolute;
    right: 16rpx;
    top: 18rpx;
    width: 34rpx;
    height: 34rpx;
}
.count{
    position: absolute;
    right: 0;
    bottom: 5rpx;
    width: 156rpx;
    height: 50rpx;
}

.count>view,.count>input{
    float: left;
    width: 50rpx;
    height: 50rpx;
    line-height: 55rpx;
    text-align: center;
    font-weight: bold;
}
.sub{
  font-weight: bold;
}
.add{
  font-weight: bold;
}
.pay-for{
    width: 100%;
    height: 100rpx;
    position: fixed;
    left: 0;
    bottom: 107rpx;
    font-size: 28rpx;
    color: #666;
    background-color:#f0f2f5;
    z-index:9999;
}
.pay-for .pay-btn{
    float: right;
    width: 200rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #f23030;
    color: #fff;
    border-radius:0;
}
.pay-for .pay-disable{
    float: right;
    width: 200rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #bbbbbb;
    color: #fff;
    border-radius:0;
}
.pay-for .consumer{
    float: right;
    margin-right: 20rpx;
    line-height: 50rpx;  
    margin-top:26rpx;
}
.pay-for .checkbox{
    float: left;
    padding-left: 40rpx;
    line-height: 100rpx;
    display: flex;
    align-items: center;
}
.pay-for .ico-check{
   display: flex;
   align-items: center;
   margin-right: 20rpx;
}


/** 热卖推荐 **/

.choice_box {
    font-size: 12px;
    background-color:#eef0f3;
    border: 2rpx solid #eef0f3;
}
.choice_box .choice_list .choice_item{
    width: 360rpx;
    float: left;
    background-color: #fff;
    margin:8rpx 0 2rpx 8rpx;
}
.choice_box .choice_list .choice_item navigator{
    background: #fff;
}
.choice_box .choice_list image {
    width: 100%;
    height: 360rpx;
}
.choice_box .choice_list .title {
    height: 36rpx;
    width: 340rpx;
    line-height: 36rpx;
    text-align: left;
    color: #333;
    padding: 0 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    font-size: 26rpx;
    margin: 15rpx 0;
}
.choice_box .choice_list .choice_footer {
    display: block; 
    margin: 20rpx 5rpx 15rpx;
    position: relative;
    height: 30rpx;
    line-height: 17rpx;
}
.choice_box .choice_list .choice_footer .price {
  color: #f23030;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 32rpx;
}
.choice_box .choice_list .choice_footer .similer {
    position: absolute;
    bottom: 0;
    right: 0;
    text-align: center;
    color: #686868;
    width: fit-content;
    line-height: 30rpx;
    padding: 1rpx 6rpx;
    border-radius: 5rpx;
     font-size:.655rem;
}

