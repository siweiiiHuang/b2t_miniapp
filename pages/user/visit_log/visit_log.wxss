page{
  background-color: #ffffff;
}
.log_date {
    background-color: #fff;
    font-size: 28rpx;
    color: #666666;
    padding: 28rpx 28rpx;
}
.visit {
    background-color: #fff;
    font-size: 28rpx;
    padding: 25rpx 0rpx;
    border-bottom: 1rpx solid #e2e2e2;
    margin: 0 30rpx;
}
.goods_img {
    width: 180rpx;
    height: 180rpx;
    float: left;
}
.goods_detail {
    width: 485rpx;
    float: left;
    padding: 5rpx 0rpx 0 30rpx;
    box-sizing: border-box;
}
.goods_name{
    height: 64rpx;
    line-height:32rpx;
    margin-bottom: 60rpx;
    text-overflow:ellipsis;
    overflow:hidden;
    display:-webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
    font-size: 26rpx;
}
.goods_footer{
    height: 50rpx;
}
.price {
    color: red;
    float: left;
    font-size: 24rpx;
    font-weight: bold;
}
.similar{
    font-size: 22rpx;
    width: 100rpx;
	  height: 40rpx;
    border-radius: 20rpx;
    text-align: center;
    border: solid 1px #dadada;
    float: right;
    line-height: 40rpx;
}
.maleri30{
  font-size: 34rpx;
  color: #1c1c1c;
}