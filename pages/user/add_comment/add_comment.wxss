.goods-mes{
    display: flex;
    justify-content:space-between;
    overflow:hidden;
    padding: 38rpx 30rpx;
}
.goods-img{
    width: 132rpx;
    height: 132rpx;
    overflow: hidden;
    margin-right: 38rpx;
}
.goods-des{
    width: 560rpx;
}
.goods-des>view{
    width: 100%;
    height: 32rpx;
    line-height: 1;
    font-size: 26rpx;
    color: #444;
    margin-top: 10rpx;
}
.goods-package{
    margin-top: 36rpx;
    font-size: 22rpx!important;
    color: #999999!important;
}
.evaluation{
    padding: 30rpx 30rpx;
    position: relative;
    font-size: 26rpx;
}
.word-box{
    color: #444;
    line-height: 40rpx;
    width: 100%;
    height: 200rpx;
    font-size: 26rpx;
}
.words-num{
    position: absolute;
    right:30rpx;
    bottom:30rpx;
    color: #777;
}
.pic-list{
    padding:40rpx 30rpx 20rpx;
    justify-content: space-around;
}
.share-pic{
    width: 140rpx;
    height: 140rpx;
    overflow: hidden;
}
.anonymous{
    height:60rpx;
    padding:0 20rpx 20rpx;
    color: #191919;
    display: flex;
    align-items: center;
    font-size: 26rpx;
    background-color: #ffffff;
}
.anonymous>icon{
    margin-right: 20rpx;
}
.score-list{
    margin-top: 20rpx;
    padding: 0 50rpx;
    font-size: 26rpx;
}
.score-list>view{
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    color: #444;
}
.score-title{
    height: 90rpx;
    line-height: 90rpx;
}
.score-title view{
  font-size: 26rpx;
}
.score-title view:first-child{
  font-weight: bold;
  position: relative;
}
.score-title view:first-child::before{
  content: '';
  width: 4rpx;
  height: 22rpx;
  background-color: #000000;
  position: absolute;
  top: 35rpx;
  left: -20rpx;
}
.score-title view:last-child{
  color: #666666;
}
.score-item{
    align-items: center;
    height: 80rpx;
}
.stars{
    display: flex;
}
.stars image{
    width: 44rpx;
    height: 40rpx;
}
.btn-wrap{
    padding: 20rpx 0;
    background-color: #fff;
    border-top: 1px solid #eee;
}
.submit-btn{
    width: 320rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background-color:#f15353;
    color: #fff;
    margin:auto;
    border-radius: 40rpx;
}
