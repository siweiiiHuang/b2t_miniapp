<import src="../../../utils/regions/regions.wxml"/>

<view class="container">
    <form bindsubmit="submitAddress">
        <view class="item">
            <view class="item-name">收货人:</view>
            <input class="item-input" name="consignee" placeholder='请填写收货人姓名' value="{{address.consignee}}"/>
        </view>
        <view class="item">
            <view class="item-name">手机号码:</view>
            <input class="item-input" name="mobile" placeholder='请填写收货人手机号' value="{{address.mobile}}"/>
        </view>
        <view class="item" data-id='0' bindtap="openRegionsModal">
            <view class="item-name">所在地区:</view>
            <view class="item-input">{{address.province_name}} {{address.city_name}} {{address.district_name}} {{address.twon_name != 'null'?address.twon_name:''}}</view>
            <view class="item-img">
                <image class="arrow" src="../../../images/icon-arrowdown.png"></image>
            </view>
        </view>
         <!-- <view class="item">
            <view class="item-name">邮政编码:</view>
            <input class="item-input" name="zipcode" placeholder='请填写正确的邮政编码' value="{{address.zipcode}}"/>
        </view> -->
        <view class="item">
            <view class="item-name">详细地址:</view>
            <input class="item-input" name="address" placeholder='请填写收货地址、门牌号' value="{{address.address}}"/>
        </view>
        <view class="item">
            <view class="item-name">设为默认地址</view>
            <switch type="switch" class="item-switch" color="#e30000" name="is_default" checked="{{address.is_default==1?true:false}}"/>
        </view>
        <view class="address-btns">
            <button class="delete-btn" bindtap="deleteAddress">删除地址</button>
            <button class="submit-btn"  form-type="submit">提交地址</button>
        </view>
    </form>
</view>

<!-- 选择地址弹框  -->
<template is="regions" data="{{regions}}"/>
