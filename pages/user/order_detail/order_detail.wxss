} */
.delivery-address{
    overflow:hidden; 
    text-overflow:ellipsis;
    white-space:nowrap;
    max-width:250px;
}
.pay-amount{
    color:#f23030;
}
.btn-wrap{
    height: 100rpx;
    background-color: #fff;
    text-align: right;
}
.tips-btn{
    display: inline-block;
    width: 200rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background-color: #f23030;
    margin-left: 2rpx;
}
.tk_btn{
    position: absolute;
    bottom: 10rpx;
    right: 0; 
    overflow: hidden
}
.tk_btn_on{
    float:left;
    margin-right: 15rpx;
    line-height:41rpx;
    text-align:center;
    font-size:23rpx;
    border:1rpx solid #999;
    width:112rpx;
    border-radius:10rpx;

}
.submit_header{
    display:flex;
    justify-content:space-between;
}
.submit_text{
    color:darkgray;
}
.submit_waitsubmit_text{
    color: #ea3524;
    border: 1px solid #ea3524;
    padding: 10rpx 20rpx;
    height: 47rpx;
}
.submit_waitsubmit_text image{
    width: 40rpx;
    height: 47rpx;
    margin-right: 20rpx;
    vertical-align: middle;
}
.single_process{
    font-size: 12px;
    padding: 0 30rpx;
}
.submit_phone{
    padding: 10rpx 20rpx;
}
.submit_phone image{
    width: 24rpx;
    height: 24rpx;
    margin-right: 20rpx;
}
.widthcode image{
    width: 90rpx;
    height: 70rpx;
}
.widthcode text{
    display: block;
    margin-top: 8rpx;
    font-size:0.57rem;
}
.bar-code image{
    height: 100rpx;
    width: 100%;
}
.bar-code{
    margin-bottom: 40rpx;
    margin-top: 20rpx;
}
.step-tit text{
    width: 25%;
    display: inline-block;
    text-align: center;
}
.step-icon{
    width: 80%;
    margin: 50rpx auto 0;
    border-top: 2px solid #999;
    position: relative;
}
.step-icon view{
    width:36rpx;
    height:36rpx;
    border-radius: 100%;
    border: 2px solid #999;
    display:inline-block;
    background-color: #fff;
    position: absolute;
    top: -20rpx;
}
.step-icon view image{
    width: 25rpx;
    height: 18rpx;
    margin-top: 9rpx;
    margin-left: 5rpx;
}
.cur-step{
    background-color: #ff0000!important;
    border:2px solid #ff0000!important;
}



