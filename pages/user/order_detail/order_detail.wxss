/* order_detail.wxss */
.container {
   padding-bottom:0rpx;
 
}
.user-mes{
    background-color: #fff;
    font-size: 32rpx;
    color: #333;
}
.user-contact{
    padding: 24rpx 30rpx;
}
.location{
    position: relative;
    padding:0 80rpx 24rpx;
}
.pos-icon{
    position: absolute;
    left: 30rpx;
    top: 0;
    width: 32rpx;
    height: 32.5rpx;
}
.border-img{
    width: 100%;
    height: 16rpx;
}
.order-meg{
    margin-bottom: 20rpx;
    font-size: 16rpx;
}
.order-state{
    height: 100rpx;
    line-height: 100rpx;
    padding-right: 40rpx;
    text-align: right;
    background-color: #fff;
    color: #f23030;
}
.order-detail{
    color: #666;
    min-height: 180rpx;
    position: relative;
    padding: 20rpx 0rpx 0 20rpx;
}
.goods-img{
    float: left;
    width: 180rpx;
    height: 180rpx;
}
.order-cont{
    float: left;
    width: 495rpx;
    margin-left: 30rpx;
}
.goods-name{
    height: 60rpx;
    line-height: 30rpx;
    overflow: hidden;
    margin-bottom: 20rpx;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    color: #1d1d1d;
    font-size: 26rpx;
}
.goods-color{
    font-size: 22rpx;
    max-height:30rpx;
    overflow:hidden;
    color: #999999;
}
.order-num{
    float: left;
    font-size: 24rpx;
    margin-top: 28rpx;
    margin-right: 20rpx;
    text-align: right;
    line-height: 42rpx;
    width: 495rpx;
    padding-left: 30rpx;
    margin-bottom:25rpx;

}
.order-operate{
    height: 100rpx; 
    padding-right: 30rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: flex-end;

}
.check-btn{
    width:180rpx;
    height:60rpx;
    line-height:60rpx;
    text-align:center;
    margin-right:10rpx;
    border:solid 1px #cfcfcf;
    font-size:26rpx;
}
.goods-btn{
    width: 160rpx;
    height: 56rpx;
    line-height: 60rpx;
    text-align: center;
    border: solid 1px #cfcfcf;
    font-size: 26rpx;
}
.cancel-order{
    margin-left:20rpx;
}
.information{
    padding: 0 20rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
    padding-bottom: 25rpx;
}
.information .title{
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    color: #333;
    font-weight: bold;
    padding-left: 20rpx;
    position: relative;
}
.information .title::before{
    content: '';
    display: block;
    width: 5rpx;
	  height: 26rpx;
    top: 27rpx;
    left: 0rpx;
	  background-color: #262626;
    position: absolute;
}
.information .item{
    display: flex;
    justify-content: space-between;
    min-height: 90rpx;
    line-height: 90rpx;
    font-size: 26rpx;
    color: #262626;
    border-bottom: solid 1rpx #e0e0e0;
}
.it-lc{
    border-bottom: none!important;
}
