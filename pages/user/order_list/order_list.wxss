/* 引入公共样式 */
@import "../../index/publics/publics.wxss";

/* 取单方式切换 */
.tab-bar {
    background-color: #fff;
    display: flex;
    border-bottom: 1rpx solid #f0e6d2;
    position: sticky;
    top: 0;
    z-index: 100;
}

.tab-item {
    flex: 1;
    text-align: center;
    padding: 24rpx 0;
    font-size: 30rpx;
    position: relative;
    color: #666;
}

.tab-item.active {
    color: #8B4513;
    font-weight: bold;
}

.tab-item.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60rpx;
    height: 4rpx;
    background-color: #8B4513;
    border-radius: 2rpx;
}

/* 取单码区域 */
.qrcode-section {
    background-color: #fff;
    margin: 30rpx;
    border-radius: 24rpx;
    padding: 40rpx;
    text-align: center;
}

.qrcode-title {
    font-size: 32rpx;
    color: #8B4513;
    font-weight: bold;
    margin-bottom: 30rpx;
}

.qrcode-box {
    width: 400rpx;
    height: 400rpx;
    background-color: #f9f6f0;
    margin: 0 auto 20rpx;
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1rpx solid #eee;
}

.qrcode-placeholder {
    font-size: 28rpx;
    color: #999;
    text-align: center;
}

.qrcode-placeholder view {
    margin-bottom: 10rpx;
}

.qrcode-desc {
    font-size: 24rpx;
    color: #666;
    margin-bottom: 30rpx;
}

.order-code {
    display: inline-block;
    padding: 16rpx 40rpx;
    background-color: #fff3e0;
    color: #8B4513;
    border-radius: 40rpx;
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}

/* 订单查询区域 */
.search-section {
    background-color: #fff;
    margin: 30rpx;
    border-radius: 24rpx;
    padding: 40rpx;
}

.search-title {
    font-size: 32rpx;
    color: #8B4513;
    font-weight: bold;
    margin-bottom: 30rpx;
}

.search-input {
    width: 100%;
    padding: 24rpx 30rpx;
    border: 1rpx solid #eee;
    border-radius: 16rpx;
    font-size: 28rpx;
    margin-bottom: 30rpx;
    box-sizing: border-box;
}

.search-input:focus {
    border-color: #8B4513;
}

.search-btn {
    width: 100%;
    padding: 24rpx;
    background-color: #8B4513;
    color: #fff;
    border: none;
    border-radius: 16rpx;
    font-size: 28rpx;
    font-weight: bold;
}

/* order_list.wxss */
.type-navbar{
    white-space: nowrap;
    display: flex;
    width: 100%;
    height:80rpx;
    background-color: #fff;
    border-bottom:1rpx solid #ededed;
    border-top:1rpx solid #ededed;
    position: sticky;
    top: 73rpx;
    z-index: 99;
}
.container {
    padding-bottom:0rpx;
    background-color: #f9f6f0;
}
.type-box{
    width:25%;
    box-sizing: border-box;
    font-size: 28rpx;
    line-height: 76rpx;
    padding: 0 20rpx;
    text-align: center;
    display: inline-block;
    overflow: hidden;
}
.type-navbar-item{
    border-bottom: 4rpx solid #fff;
}
.type-item-on{
    position: relative;
    color:#ff4139;
}
.type-item-on::before{
  content: '';
  display: block;
  bottom: -3rpx;
  position: absolute;
  width: 50rpx;
	height: 5rpx;
	background-color: #ff4139;
  left: 30rpx;
}
.goods-container{
    display: flex;
    justify-content: space-between;  
    flex-wrap:wrap;
    box-sizing: content-box;
}
.goods-box{
    width: 100%;
    background-color: #fff;
    padding: 0 30rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
}
.goods-title{
    display: flex;
    justify-content:space-between;
    align-items:center;
    padding: 30rpx 0;
}
.order-number{
    font-size: 26rpx;
    color: #1c1c1c;
}
.pay-status{
    color:#f23030;
}
.goods-cont{
    padding: 20rpx 0;
