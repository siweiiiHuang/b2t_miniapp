<!--index.wxml-->
<view class="container">
  <!-- 头部黄色背景，简洁设计 -->
  <view class="userinfo">
    <view class="user-container">
        <view class="user-center">
            <view catchtap='clickMenu'>
            <image class="userinfo-avatar" src="{{userInfo.head_pic?userInfo.head_pic:defaultAvatar}}"></image>
            </view>
            <view class="user-name">
            <text wx:if="{{userInfo.nickname || userInfo.user_id}}">{{storageUserInfo.mobile}}</text>
            <button wx:else open-type="getUserInfo" bindgetuserinfo='bindGetUserinfo' class='login-btn'>立即登录</button>
            </view>
            <view class="user-desc" wx:if="{{userInfo.user_id}}">
            <text>{{userInfo.describe?userInfo.describe:'注册会员'}}</text>
            </view>                 
        </view>
    </view>
  </view>       
    <view class="manage-list">    
    <block wx:for="{{userInfoList.manageList}}" wx:key="index">
        <!-- 订单模块（menu_id=1） -->
        <block wx:if="{{item.menu_id == 1}}">
        <view style="margin-bottom:{{item.is_tab == 1?'20':'0'}}rpx">
             <view class="my-order" catchtap='clickMenu'  data-url="/pages/user/order_list/order_list" >
                <view class="order-title">
                    <image class="order-ico" src="../../../images/mlist.png"></image>
                    <text>{{item.menu_name?item.menu_name:item.default_name}}</text>
                </view>
                <view class="all-order">
                    <view>全部订单</view>
                    <image class="arrow-right" src="../../../images/icon-arrowdown.png"></image>
                </view>
            </view>
            <view class="order-list">
                <view class="order-item" catchtap='clickMenu'  data-url="/pages/user/order_list/order_list?type=1">
                    <view class="order-pic0 order-pic">
                        <image class="wh100" src="../../../images/q1.png"></image>
                    </view>
                    <text class="order-des">待付款</text>
                    <text class="order-num" hidden='{{userInfo.waitPay==0}}'>{{userInfo.waitPay}}</text>
                </view>
                <view class="order-item" catchtap='clickMenu'  data-url="/pages/user/order_list/order_list?type=3" >
                    <view class="order-pic1 order-pic">
                        <image class="wh100" src="../../../images/q2.png"></image>
                    </view>
                    <text class="order-des">待收货</text>
                    <text class="order-num" hidden='{{userInfo.waitReceive==0}}'>{{userInfo.waitReceive}}</text>
                </view>
                <view class="order-item" catchtap='clickMenu'  data-url="/pages/user/comment/comment?status=0">
                    <view class="order-pic2 order-pic">
                        <image class="wh100" src="../../../images/q3.png"></image>
                    </view>
                    <text class="order-des">待评价</text>
                    <text class="order-num" hidden='{{userInfo.uncomment_count==0}}'>{{userInfo.uncomment_count}}</text>
                </view>
                <view class="order-item" catchtap='clickMenu'  data-url="/pages/user/return_goods_list/return_goods_list" >
                    <view class="order-pic3 order-pic">
                        <image class="wh100" src="../../../images/q4.png"></image>
                    </view>
                    <text class="order-des">退款/退货</text>
                    <text class="order-num" hidden='{{userInfo.return_count==0}}'>{{userInfo.return_count}}</text>
                </view>
                </view>
             </view>
        </block>
        <!-- 普通菜单（非menu_id=1） -->
        <block wx:else>
            <navigator class="manage-item" catchtap='clickMenu' data-url="{{item.url}}" style="margin-bottom:{{item.is_tab == 1?'20':'0'}}rpx">
                    <view class="order-title">
                        <image class="order-ico" src="{{item.logo}}"></image>
                        <text>{{item.menu_name?item.menu_name:item.default_name}}</text>
                    </view>
                    <image class="arrow-right" src="../../../images/icon-arrowdown.png"></image>
                </navigator>   
        </block>                        
    </block>     
    </view>
</view>

<!-- 底部导航 -->
<import src="../../index/publics/publics.wxml"/>
<template is="bottomNav" data="{{currentPage:3}}"/>

<!-- 悬浮客服球 -->
<template is="floatService"/>