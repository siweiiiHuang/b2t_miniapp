/* 引入公共样式 */
@import "../../index/publics/publics.wxss";

/**index.wxss**/
.userinfo {
    width: 100%;
    height: 325rpx;
    background-size: cover;
    color: #fff;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin:0 40rpx;
  border-radius: 50%;
}
.user-box{
    position: relative;
    display: flex;
    align-items: center;
    height: 222rpx;
    font-size: 36rpx;
}
.set-btn{
    position: absolute;
    right: 40rpx;
    top: 40rpx;
    width: 60rpx;
    height: 60rpx;
}
.user-mes{
 
    height: 102rpx;
    position: relative;
}
.user-mes-bg{
    position: absolute;
    left: 0;
    top: 0;
    background: #000000;
    opacity: 0.5;
    width: 100%;
    height: 100%;
    z-index: 8;
}
.mes-item-wrap{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 9;
    display: flex;
}
.mes-item{
    width: 50%;
    text-align: center;
}
.mes-num{
    font-size: 36rpx;
    line-height: 50rpx;
    margin-top:7rpx;
}
.mes-title{
    font-size: 26rpx;
}
.my-order{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70rpx;
    background-color: #fff;
    border-bottom:1px solid #f5f5f5;
}
.order-ico{
    width: 40rpx;
    height: 40rpx;
    margin-left: 40rpx;
    margin-right: 20rpx;
}
.arrow-right{
    width:30rpx;
    height:30rpx;
    margin-right:20rpx;
    margin-top:5rpx;
}
.all-order{
    display: flex;
    font-size: 28rpx;
    color: #777;
}
.order-title{
    display: flex;
    font-size: 32rpx;
    color: #444;
}
.order-list{
    display: flex;
    height: 100rpx;
    padding: 50rpx 0;
    background-color: #fff;
}
.order-item{
    position: relative;
    width: 25%;
    text-align: center;
    font-size: 24rpx;
}
.order-pic{
    margin: 15rpx auto;
}
.order-pic0{
    width:47rpx;
    height:40rpx;
}
.order-pic1{
    width:46rpx;
    height:40rpx;
}
.order-pic2{
    width:49rpx;
    height:45rpx;
}
.order-pic3{
    width:42rpx;
    height:40rpx;
}
.order-des{
    height: 34rpx;
    line-height: 34rpx;
    color: #444;
}
.order-num{
    position: absolute;
    right: 40rpx;
    top:-25rpx;
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 50%;
    background-color: rgba(217,81,99,0.9);
    color: #fff;
}
.wallet-item{
    width: 33.33%;
    text-align: center;
}
.wallet-num{
    color: #f23030;
    font-size: 36rpx;
    height: 64rpx;
    line-height: 64rpx;
    overflow: hidden;
}
.wallet-des{
    height: 36rpx;
    line-height: 36rpx;
    font-size: 24rpx;
    color: #444;
}
.manage-list{   
    /* margin-bottom: 40rpx; */
}
.manage-list view{
 background-color: #fff;
}
.manage-list navigator{
 background-color: #fff;
}
.manage-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 90rpx;
    border-bottom:1px solid #f5f5f5;
}