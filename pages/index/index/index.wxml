<!-- 顶部导航 -->
<view class="top-nav" style="padding-top: {{statusBarHeight}}px; height: {{navBarHeight}}px;">
  <view class="top-nav-title">酥仙记-沙琪玛</view>
</view>

<!-- 温馨提示区 -->
