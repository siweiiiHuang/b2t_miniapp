/* pages/index/publics/publics.wxss */

.tpd-footer{
    border-top: 1px solid #ddd;
    min-height:105rpx;
    background-color: #fff;
    overflow: hidden;
    justify-content:space-around;
    display:flex;
    /* iPhone底部安全区域适配 */
    padding-bottom: env(safe-area-inset-bottom);
    padding-bottom: constant(safe-area-inset-bottom); /* iOS 11.0-11.2 兼容 */
    box-sizing: border-box;
}
.tpd-footer view{
    float: left;
    padding-top:10rpx;
    text-align: center;
}
.tpd-footer image{
    display: block;
    margin: 0 auto;
    width: 46rpx;
    height: 46rpx;
}
.tpd-footer text{
    display: block;
    height: 48rpx;
    margin-bottom: 12rpx;
    font-size: 22rpx;
    line-height: 48rpx;
    color: #999;
}
.tpd-footer-select text{
    color: #ff354d;
}
.tpd-footer1 view{
    width: 25%;
}
.tpd-footer2 view{
    width: 20%;
}
.pos_fixed{
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 999;
    /* 确保安全区域适配 - 只在底部添加 */
    padding-bottom: env(safe-area-inset-bottom);
    padding-bottom: constant(safe-area-inset-bottom); /* iOS 11.0-11.2 兼容 */
    box-sizing: border-box;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background-color: #fff;
  border-top: 1px solid #f0e6d2;
  padding: 8rpx 0;
  /* iPhone底部安全区域适配 - 只在底部添加安全区域 */
  padding-bottom: calc(8rpx + env(safe-area-inset-bottom));
  padding-bottom: calc(8rpx + constant(safe-area-inset-bottom)); /* iOS 11.0-11.2 兼容 */
  z-index: 999;
}

.bottom-nav-item {
  flex: 1;
  text-align: center;
}

.bottom-nav-icon {
  font-size: 40rpx;
  color: #8B4513;
  margin-bottom: 4rpx;
}

.bottom-nav-text {
  font-size: 24rpx;
  color: #333;
}

.bottom-nav-active .bottom-nav-icon {
  color: #8B4513;
}

.bottom-nav-active .bottom-nav-text {
  color: #8B4513;
  font-weight: bold;
}

/* 悬浮客服球 */
.float-service-btn {
  position: fixed;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #8B4513;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(139, 69, 19, 0.3);
  z-index: 998;
  border: none;
  padding: 0;
  margin: 0;
  /* 适配底部导航栏高度和安全区域 */
  bottom: calc(200rpx + env(safe-area-inset-bottom));
  bottom: calc(200rpx + constant(safe-area-inset-bottom)); /* iOS 11.0-11.2 兼容 */
}

.float-service-btn::after {
  border: none;
}

.float-service-icon {
  font-size: 50rpx;
  color: #fff;
  line-height: 1;
}
